<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_password"
    tools:context=".ui.password.PasswordFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:src="@drawable/img_logo_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/set_password"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <LinearLayout
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/radio_check_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_password_enter"
            android:buttonTint="@android:color/transparent"
            android:clickable="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:scaleX="0.6"
            android:scaleY="0.6" />

        <RadioButton
            android:id="@+id/radio_check_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_password_enter"
            android:buttonTint="@android:color/transparent"
            android:clickable="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:scaleX="0.6"
            android:scaleY="0.6" />

        <RadioButton
            android:id="@+id/radio_check_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_password_enter"
            android:buttonTint="@android:color/transparent"
            android:clickable="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:scaleX="0.6"
            android:scaleY="0.6" />

        <RadioButton
            android:id="@+id/radio_check_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_password_enter"
            android:buttonTint="@android:color/transparent"
            android:clickable="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:scaleX="0.6"
            android:scaleY="0.6" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Неверный пароль"
        android:visibility="invisible"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="@+id/radio_group"
        app:layout_constraintStart_toStartOf="@+id/radio_group"
        app:layout_constraintTop_toBottomOf="@+id/radio_group" />

    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Верный пароль"
        android:visibility="invisible"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="@+id/radio_group"
        app:layout_constraintStart_toStartOf="@+id/radio_group"
        app:layout_constraintTop_toBottomOf="@+id/radio_group" />

    <LinearLayout
        android:id="@+id/layout_btns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_group">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/background_password_button"
                android:backgroundTint="#10FFFFFF"
                android:elevation="0dp"
                android:text="1"
                android:gravity="center"
                android:textSize="36sp"
                app:borderWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/background_password_button"
                android:backgroundTint="#10FFFFFF"
                android:text="2"
                android:textSize="36sp"
                app:borderWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/background_password_button"
                android:backgroundTint="#10FFFFFF"
                android:text="3"
                android:textSize="36sp"
                app:borderWidth="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/background_password_button"
                android:backgroundTint="#10FFFFFF"
                android:text="4"
                android:textSize="36sp"
                app:borderWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/background_password_button"
                android:backgroundTint="#10FFFFFF"
                android:text="5"
                android:textSize="36sp"
                app:borderWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/background_password_button"
                android:backgroundTint="#10FFFFFF"
                android:text="6"
                android:textSize="36sp"
                app:borderWidth="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/background_password_button"
                android:backgroundTint="#10FFFFFF"
                android:text="7"
                android:textSize="36sp"
                app:borderWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/background_password_button"
                android:backgroundTint="#10FFFFFF"
                android:text="8"
                android:textSize="36sp"
                app:borderWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/background_password_button"
                android:backgroundTint="#10FFFFFF"
                android:text="9"
                android:textSize="36sp"
                app:borderWidth="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_help"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:src="@drawable/img_help" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/background_password_button"
                android:backgroundTint="#10FFFFFF"
                android:text="0"
                android:textSize="36sp"
                app:borderWidth="0dp" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:src="@drawable/img_delete" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>